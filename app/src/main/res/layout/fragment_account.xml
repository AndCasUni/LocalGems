<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Il tuo profilo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/account_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="esempio@email.com"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/account_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mario"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cognome"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/account_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rossi"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data di nascita"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/account_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01/01/1990"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/account_see_orders_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_seeOrders" />

        <Button
            android:id="@+id/account_logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esegui il logout"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:padding="12dp"/>
    </LinearLayout>
</ScrollView>
